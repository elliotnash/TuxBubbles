using Gtk 4.0;
using Adw 1;

template $TuxBubblesConversationViewPage: Adw.NavigationPage {
  title: _("Messages");
  
  Adw.ToolbarView toolbar_view {
    [top]
    Adw.HeaderBar header_bar {}
  
    content: Gtk.ScrolledWindow scroller {
      child: Gtk.ListView messages_view {};
    };

    [bottom]
    $TuxBubblesMessageComposer composer {}
  }
}
